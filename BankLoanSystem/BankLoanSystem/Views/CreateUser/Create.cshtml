                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        @if (ViewBag.CurrUserRoleType != 2)
        {
            <div class="form-group">
                @Html.ChqLabelFor(model => model.BranchId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.BranchId, null, "Select the branch", htmlAttributes: new { @class = "form-control" ,id="BranchId"})
                    @Html.ValidationMessageFor(model => model.BranchId, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            @Html.ChqLabelFor(model => model.RoleId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RoleId, null, "Select the role", htmlAttributes: new { @class = "form-control", id = "RoleId" })
                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger", @id = "RoleIdValidate" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>

                <input type="button" value="Clear" class="btn btn-default" onclick="location.href='@Url.Action("Create", "CreateUser")' " />
            </div>
        </div>
    </div>
}

