@model IList<BankLoanSystem.Models.Right>

<h2>EditRights</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr /><p>All &nbsp</p>
        @Html.CheckBox("All", false)
        <table class="dl-horizontal">

            @*<tr>
                    <td>
                        <b> @Html.DisplayNameFor(model => model.active) &nbsp &nbsp &nbsp </b>
                    </td>
                    <td>
                        <b> @Html.DisplayNameFor(model => model.description)</b>
