            }
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />

                <input type="button" value="Cancel" onclick="location.href='@Url.Action("editUser", "ManageUsers", new { id = ViewBag.userId })'" class="btn btn-default" />
            </div>


        </div>
    </div>
}
