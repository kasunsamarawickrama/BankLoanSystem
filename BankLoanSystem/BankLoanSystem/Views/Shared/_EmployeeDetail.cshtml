@model BankLoanSystem.Models.DashBoard

@{
    ViewBag.Title = "SetupDashBoard";
}



<div class="nav-conatainer">
    <div class="nav-bars">

        <ul class="nav nav-pills nav-stacked">
            <li>
                <div class="profile-elements ">

                    <img alt="image" class="img-circle" src="~/Images/profile_small.jpg"><br>



                    <strong>
                        @Ajax.ActionLink(Model.userName, "SearchUsers", "DashBoard", new { index = 1 }, new AjaxOptions { OnFailure = "handleError", HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "changeContainer", LoadingElementId = "loadingDiv" }, new { @class = "block", onclick = "removeAll()" })
                    </strong>

                    @*<span class="block"><strong>@Model.userName  </strong></span><br>*@
                    <div class="dropdown no-text-decoration">

                        <a class="dropdown-toggle no-text-decoration" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">


                            <span>@Model.roleName</span>
                            <span class="caret"></span>
                        </a>


                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Sign out", "EmployeeLogin", "Login", null, null)</li>
                        </ul>
                    </div>


                </div>
            </li>

            <li role="separator" class="divider"></li>
            <li class="main-tab 1"><a href="#demo" data-toggle="collapse"><span class="glyphicon glyphicon-th-large" style="margin-right: 2px;"></span> Activities<span class="caret arrow" style="margin-top: 5px;float:right"></span> </a></li>
            <div id="demo" class="collapse nav-bars">
                <ul class="nav nav-pills nav-stacked secondary">
                    <li class="active">

                       @Html.ActionLink("Create Company", "SearchUsers", "DashBoard", new { index = 7 }, null)
                       
                    </li>
  

                </ul>

            </div>

           


        </ul>
    </div>

</div>












