        }

        h5 {
            text-align: center;
        }

        .centered {
            margin: 0 auto;
            clear: both;
            width: 1170px;
        }

        h2 {
            text-align: center;
            /* clear: both; */
            width: 1170px;
        }



        .page-wrapper {
