            margin-bottom: 20px;
        }

        .no-bullets {
            list-style-type: none;
        }

        .img-circle {
            border-radius: 50%;
        }

        .no-text-decoration {
            text-decoration: none;
        }

        .profile-elements {
            float: left;
            margin-left: 20px;
        }

        .input-validation-error {
            border: 1px solid #ff0000;
        }

        .form-control[disabled] { 
            cursor: default; 
        }

        .gridtable {
