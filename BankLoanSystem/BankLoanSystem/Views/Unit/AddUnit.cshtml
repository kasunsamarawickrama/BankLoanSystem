                        var name = "";
                        foreach (var type in ViewBag.loanDetails.selectedUnitTypes)
                        {

                            id = type.unitTypeId;
                            name = type.unitTypeName;

                            if (id == ViewBag.loanDetails.defaultUnitType)
                            {
                                ListOfUnitTypes.Add(new SelectListItem
                                {
                                    Value = id.ToString(),
                                    Text = name,
