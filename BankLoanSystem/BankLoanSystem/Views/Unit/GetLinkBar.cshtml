@model IEnumerable<BankLoanSystem.Models.Right>


<button id="lkadv" class="big-button" onclick="window.location.href = '/UserManagement/UserDetails'">
    <span class="icon-windows8"></span>
    <span class="txt">DashBoard</span>
</button>

@*@Html.ActionLink("DashBoard", "UserDetails", "UserManagement", null, new { @class = "btn btn-info btn-arrow-right" })*@

@foreach (var item in Model)
{



    if (item.rightId == "U001")
    {
        <button id="lkadv" class="big-button" onclick="window.location.href='/AdvanceUnit/Advance'">
            <span class="icon-dollar"></span>
            <span class="txt">Advance Unit</span>
        </button>
        @*@Html.ActionLink("Advance", "Advance", "AdvanceUnit", null, new { @class = "btn btn-info btn-arrow-right link" , @id="lkadv" })*@
    }

    if (item.rightId == "U002" && ViewBag.ttlAccess == 1)
    {
        <button id="lkttl" class="big-button" onclick="window.location.href='/UnitTitle/TitleStatusUpdate'">
            <span class="icon-files-empty"></span>
            <span class="txt">Update Titles</span>
        </button>

        @*@Html.ActionLink("Title", "TitleStatusUpdate", "UnitTitle", null, new { @class = "btn btn-info btn-arrow-right link",   @id = "lkttl" })*@
    }

    if (item.rightId == "U003")
    {
        <button id = "lkpoff" class="big-button" onclick="window.location.href='/UnitPayOff/PayOff'">
            <span class="icon-banknote"></span>
            <span class="txt">Pay Off A Unit</span>
        </button>

        @*@Html.ActionLink("Pay Off", "PayOff", "UnitPayOff", null, new { @class = "btn btn-info btn-arrow-right link", @id = "lkpoff" })*@
    }

    if (item.rightId == "U004")
    {
        <button id = "lkuni" class="big-button" onclick="window.location.href='/Unit/Addunit'">
            <span class="icon-truck"></span>
            <span class="txt">Add Unit</span>
        </button>

        @*@Html.ActionLink("Unit", "addunit", "unit", null, new { @class = "btn btn-info btn-arrow-right link", @id = "lkuni" })*@
    }

    if (item.rightId == "U005")
    {
        <button id = "lkcrtl" class="big-button" onclick="window.location.href='/Curtailments/PayCurtailments'">
            <span class="icon-coin-dollar"></span>
            <span class="txt">Unit Curtailments</span>
        </button>
        @*@Html.ActionLink("Curtailment", "PayCurtailments", "Curtailments", null, new { @class = "btn btn-info btn-arrow-right link", @id = "lkcrtl" })*@
    }







}


