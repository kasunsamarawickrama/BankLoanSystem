@model BankLoanSystem.Models.UserRequest

@{
    ViewBag.Title = "User Request Message";
}




<div class="msg-box">
    @using (Ajax.BeginForm("UserRequestMessage", "UserManagement", new AjaxOptions()
    {

        OnFailure = "handleErrorMsg",
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "changeContainer"
    }, new { id = "form" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <span >Send us a Message:</span>
        </div>

        <div>

            <div>
                <div style="margin-right:45px;display:inline-block;">
                    <label for="email" class="labels">Subject:</label>
                </div>
                <div class="select-style">

                    <select id="topic">
                        <option value="">--Select a category--</option>
                        <option value="">Comment/Idea on program</option>
                        <option value="">Techincal Support</option>
                        <option value="">Billing Question</option>
                        <option value="">Other</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.topic, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>

        <div>
            <span>Message:</span>
            @Html.TextAreaFor(model => model.message, 5, 85, new { htmlAttributes = new { @class = "form-control-notebox",@id = "txtmessage" } })
            @Html.ValidationMessageFor(model => model.message, "", new { @class = "text-danger" })

        </div>

        <div>
            <input type="submit" value="Submit" name="btnAdd" id="btnSubmit" class="button button5" style="float:right;" />
        </div>

        <div style="clear:both;padding-top:10px">
                <small><span>@ViewBag.SuccessMsg</span></small>
            </div>
    }
</div>
