@model BankLoanSystem.Models.DashBoard
@{
    ViewBag.Title = "UserDashBoard";
}

<h2>UserDashBoard </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ActionLink("My Profile", "Details", "UserManagement", new {type = 4, id = Model.userId}, null)
    </div>

    <br/>

    if (Model.levelId == 1 || Model.levelId == 2)
    {
        <div class="form-horizontal">

            @Html.ActionLink("Create User", "Create", "CreateUser", new { id = Model.userId, type = "" }, null)
        </div>
    }
    if (Model.levelId == 1)
    {
        @Html.ActionLink("Create Branch", "CreateBranch", "CreateBranch", new { id = Model.userId, type = "" }, null)
    }

    <br/>

    if (Model.levelId == 1)
    {
        <div class="form-horizontal">

            @Html.ActionLink("Manage Super Admins", "SearchUsers", "DashBoard", new { type = 1, id = Model.userId }, null)
        </div>
    }
    if (Model.levelId == 1 || Model.levelId == 2)
    {
        <div class="form-horizontal">
            @Html.ActionLink("Manage Admins", "SearchUsers", "DashBoard", new { type = 2, id = Model.userId }, null)
        </div>
    }
    if (Model.levelId == 1 || Model.levelId == 2)
    {
        <div class="form-horizontal">
            @Html.ActionLink("Manage Users", "SearchUsers", "DashBoard", new { type = 3, id = Model.userId }, null)
        </div>
    }
   
}